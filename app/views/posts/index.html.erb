<%= form_for(@new_post) do |f| %>

  <% if @new_post.errors.any? %>
  <div class="message error">
    <ul>
    <% @new_post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
  <% elsif flash.any? %>
  <div class="message success">
    <ul>
    <% flash.each do |key, value| %>
      <li><%= value %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="fields">
    <label>Name: </label><%= f.text_field :name %>&nbsp;&nbsp;&nbsp;
    <label>Email: </label><%= f.email_field :email %>
    <br />
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit "Post this comment" %>
  </div>
<% end %>

<% @posts.each do |post| %>
  <div class="post">

    <p class="name">
    <% if post.email.empty? %>
    <%= post.name %>
    <% else %>
    <a href="mailto:<%= post.email %>"><%= post.name %></a>
    <% end %>
    </p>
    <hr />
    <p class="content"><%= post.comment %></p>
    <p class="time"><%= post.created_at %></p>

  </div>
<% end %>
